{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "module": "nodenext",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@generated/*": [
        "src/generated/*"
      ]
    }
  },
  "include": [
    "src",
    "src/db/db-schema.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}