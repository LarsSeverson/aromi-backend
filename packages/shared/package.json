{
  "type": "module",
  "name": "@aromi/shared",
  "version": "1.0.0",
  "author": "Lars Severson",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build ; tsc-alias -p tsconfig.json",
    "gen:db": "kysely-codegen && tsx src/scripts/fix-schema-db.ts",
    "init-search": "tsx src/scripts/init-search.ts",
    "sync:search": "tsx src/scripts/sync-search.ts"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.797.0",
    "@aws-sdk/client-s3": "^3.758.0",
    "@aws-sdk/cloudfront-signer": "^3.813.0",
    "@aws-sdk/s3-presigned-post": "^3.873.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "bullmq": "^5.58.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "kysely": "^0.28.2",
    "meilisearch": "^0.53.0",
    "nanoid": "^5.1.6",
    "neverthrow": "^8.2.0",
    "pg": "^8.13.3",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pg": "^8.11.11",
    "dotenv-cli": "^10.0.0",
    "kysely-codegen": "^0.19.0",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  },
  "kysely-codegen": {
    "dialect": "postgres",
    "url": "env(DB_URL)",
    "outFile": "./src/db/db-schema.ts",
    "camelCase": true,
    "defaultSchemas": [
      "public"
    ],
    "singularize": true,
    "dateParser": "string",
    "runtimeEnums": true
  }
}
