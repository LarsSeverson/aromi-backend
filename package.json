{
  "name": "aromi-backend",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "description": "Backend to aromi",
  "author": "Lars Severson",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn run start:server",
    "start:server": "yarn run build:shared && yarn workspace @aromi/server start",
    "start:workers": "yarn run build:shared && yarn workspace @aromi/workers start",
    "dev": "yarn run build:shared && yarn run dev:server",
    "dev:server": "yarn run build:shared && yarn workspace @aromi/server dev",
    "dev:workers": "yarn run build:shared && yarn workspace @aromi/workers dev",
    "build": "yarn workspaces run build",
    "build:server": "yarn workspace @aromi/server build",
    "build:workers": "yarn workspace @aromi/workers build",
    "build:shared": "yarn workspace @aromi/shared build",
    "gen:gql": "yarn workspace @aromi/server gen:gql",
    "gen:db": "yarn workspace @aromi/shared gen:db",
    "copy:db": "yarn workspace @aromi/shared copy:db",
    "init:db": "yarn workspace @aromi/shared init:db",
    "lint": "eslint 'packages/*/src/**/*.ts'",
    "lint:fix": "eslint 'packages/*/src/**/*.ts' --fix",
    "lint:server": "eslint 'packages/server/src/**/*.ts'",
    "lint:server:fix": "eslint 'packages/server/src/**/*.ts' --fix",
    "lint:workers": "eslint 'packages/workers/src/**/*.ts'",
    "lint:workers:fix": "eslint 'packages/workers/src/**/*.ts' --fix",
    "lint:shared": "eslint 'packages/shared/src/**/*.ts'",
    "lint:shared:fix": "eslint 'packages/shared/src/**/*.ts' --fix",
    "search:init": "yarn workspace @aromi/shared init-search",
    "search:sync": "yarn workspace @aromi/shared sync:search",
    "test": "jest"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@stylistic/eslint-plugin": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-love": "^133.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
