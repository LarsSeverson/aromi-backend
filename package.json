{
  "name": "aromi-backend",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "description": "Backend to aromi",
  "author": "Lars Severson",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn run start:server",
    "start:server": "yarn workspace @aromi/server start",
    "start:workers": "yarn workspace @aromi/workers start",
    "dev": "yarn run dev:server",
    "dev:server": "yarn workspace @aromi/server dev",
    "dev:workers": "yarn workspace @aromi/workers dev",
    "build": "yarn workspaces run build",
    "build:server": "yarn workspace @aromi/server build",
    "build:workers": "yarn workspace @aromi/workers build",
    "build:shared": "yarn workspace @aromi/shared build",
    "gen:gql": "yarn workspace @aromi/server gen:gql",
    "gen:db": "yarn workspace @aromi/shared gen:db"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@stylistic/eslint-plugin": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-love": "^122.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
