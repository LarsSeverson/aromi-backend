{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@aromi/shared/*": [
        "packages/shared/src/*"
      ]
    },
  }
}